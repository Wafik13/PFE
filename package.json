{
  "name": "it-network-kubernetes",
  "version": "1.0.0",
  "description": "Kubernetes-orchestrated IT network platform with microservices architecture",
  "main": "index.js",
  "scripts": {
    "start": "node api-gateway/server.js",
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:frontend\"",
    "dev:gateway": "nodemon api-gateway/server.js",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:frontend && npm run build:services",
    "build:frontend": "cd frontend && npm run build",
    "build:services": "docker-compose build",
    "deploy": "kubectl apply -f k8s/",
    "test": "jest",
    "lint": "eslint . --ext .js,.ts,.tsx"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "redis": "^4.6.8",
    "pg": "^8.11.3",
    "amqplib": "^0.10.3",
    "influx": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^6.10.0",
    "winston": "^3.10.0",
    "prometheus-client": "^14.2.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "kubernetes",
    "microservices",
    "api-gateway",
    "scada",
    "ml-ops",
    "data-analytics",
    "enterprise"
  ],
  "author": "Senior Full Stack Developer",
  "license": "MIT"
}